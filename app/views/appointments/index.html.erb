<h1>Appointments</h1>

<% if @appointments.empty? %>
  <p>There are no appointments.</p>
<% else %>
  <ul>
  <% @appointments.each do |appointment| %>
    <li>
      <%= link_to appointment.author.name, appointment.author %> will be meeting with
      <%= link_to appointment.employee.name, appointment.employee %> on <%= appointment.shcedule %>.
    </li>
  <% end %>
  </ul>
<% end %>