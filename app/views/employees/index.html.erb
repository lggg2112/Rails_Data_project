<div class="container">
  <p id="notice"></p>
    <h1>Employees</h1>

<%= paginate @employees %>
<% @employees.each do |employee| %>
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Email</th>
      <th>Phone Number</th>
      <th>Position</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
      <tr>
        <td><div class="crop"><%= link_to employee.name, employee  %></div></td>
        <td><div class="crop"><%= link_to employee.address, employee  %></div></td>
        <td><div class="crop"><%= link_to employee.email, employee %></div></td>
        <td><div class="crop"><%= link_to employee.phonenumber, employee %></div></td>
        <td><div class="crop"><%= link_to employee.position, employee %></div></td>
        <td><%= link_to 'show', employee %></td>
        <td><%= link_to 'edit', employee %></td>
        <td><a data-confirm="Are you sure?" rel="nofollow" data-method="delete" href="/pages/1">Destroy</a></td>
      </tr>
  </tbody>
</table>
<% end %>

<%= paginate @employees %>
<p><%= link_to 'Home', root_path %></p>

</div>
