<div class="container">
  <p id="notice"></p>
    <h1>Publishers</h1>
</div>

<% @publishers.each do |publisher| %>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Email</th>
      <th>Phone Number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
      <tr>
        <td><%= link_to publisher.name, publisher  %></td>
        <td><%= link_to publisher.address, publisher  %></td>
        <td><%= link_to publisher.email, publisher %></td>
        <td><%= link_to publisher.phonenumber, publisher %></td>
        <td><%= link_to 'show', publisher %></td>
        <td><%= link_to 'edit', publisher %></td>
        <td><a data-confirm="Are you sure?" rel="nofollow" data-method="delete" href="/pages/1">Destroy</a></td>
      </tr>
  </tbody>
</table>
<% end %>

<p><%= link_to 'Home', root_path %></p>