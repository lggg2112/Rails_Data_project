<div class="container">
  <p id="notice"></p>
    <h1>Authors</h1>

<% @authors.each do |author| %>
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Email</th>
      <th>Phone Number</th>
      <th>Nationality</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
      <tr>
        <td><div class="crop"><%= link_to author.name, author  %></div></td>
        <td><div class="crop"><%= link_to author.address, author  %></div></td>
        <td><div class="crop"><%= link_to author.email, author %></div></td>
        <td><div class="crop"><%= link_to author.phonenumber, author %></div></td>
        <td><div class="crop"><%= link_to author.nationality, author %></div></td>
        <td><%= link_to 'show', author %></td>
        <td><%= link_to 'edit', author %></td>
        <td><a data-confirm="Are you sure?" rel="nofollow" data-method="delete" href="/pages/1">Destroy</a></td>
      </tr>
  </tbody>
</table>
<% end %>

</div>

<p><%= link_to 'Home', root_path %></p>